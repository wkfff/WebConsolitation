using System;

namespace Krista.FM.RIA.Core.ExtNet.Extensions.PeriodField
{
    public class PeriodFieldConfig
    {
        public PeriodFieldConfig()
        {
            ShowDay = true;
            DaySelectable = true;
            MinDate = null;
            MaxDate = null;
            AfterSelectHandler = String.Empty;
            SortASC = true;
            RenderQuartersAsMonths = false;
        }

        public string AfterSelectHandler { get; set; }

        public bool ShowYear { get; set; }

        public bool ShowQuarter { get; set; }
        
        public bool ShowMonth { get; set; }
        
        public bool ShowDay { get; set; }

        public bool YearSelectable { get; set; }
        
        public bool QuarterSelectable { get; set; }
        
        public bool MonthSelectable { get; set; }

        public bool DaySelectable { get; set; }

        public DateTime? MinDate { get; set; }
        
        public DateTime? MaxDate { get; set; }

        public bool SortASC { get; set; }

        public bool RenderQuartersAsMonths { get; set; }
    }
}

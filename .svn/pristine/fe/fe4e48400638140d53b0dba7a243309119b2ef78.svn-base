using System;
using System.Runtime.Serialization;

namespace Krista.FM.RIA.Extensions.Consolidation.Services.Forms.ScriptingEngine
{
    /// <summary>
    /// Исключение создания хеш-имени для объекта базы данных.
    /// </summary>
    [Serializable]
    public class DatabaseObjectHashNameException : Exception
    {
        public DatabaseObjectHashNameException()
        {
        }

        public DatabaseObjectHashNameException(string message)
            : base(message)
        {
        }

        public DatabaseObjectHashNameException(string message, Exception innerException)
            : base(message, innerException)
        {
        }

        protected DatabaseObjectHashNameException(SerializationInfo info, StreamingContext context)
            : base(info, context)
        {
        }
    }
}

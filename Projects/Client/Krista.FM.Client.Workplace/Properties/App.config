<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<appSettings>
		<add key="ServerProtocol" value="tcp"/>
		<add key="ServerPort" value="8008"/>
		<add key="ServerAddress" value="FMServer/Server.rem"/>
	</appSettings>
	<runtime>
        	<generatePublisherEvidence enabled="false"/> 
    	</runtime>
  <system.runtime.remoting>
    <application>
      <client>
        <wellknown type="Krista.FM.Server.ServerClass, Krista.FM.Server" url="tcp://localhost:8008/FMServer/Server.rem" />
      </client>
      <channels>
        <channel ref="tcp" port="0">
          <clientProviders>
            <formatter ref="binary" />
            <!--<provider ref="replaceIPAddress" serverName="serverName"/>-->
          </clientProviders>
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </serverProviders>
        </channel>
      </channels>
    </application>
    <!--<channelSinkProviders>
      <clientProviders>
        <provider id="replaceIPAddress"
			    type="Krista.FM.Common.ReplaceIPAddressClientChannelSinkProvider, Krista.FM.Common" />
      </clientProviders>
    </channelSinkProviders>-->
  </system.runtime.remoting>
	<system.diagnostics>
		<sources>
			<source name="Krista.FM.Common" switchValue="Verbose">
				<listeners>
					<add name="ColoredConsole"/>
					<add name="FileTextWriter"/>
					<remove name="Default"/>
				</listeners>
			</source>
			<source name="Krista.FM.Client.Workplace" switchValue="Verbose">
				<listeners>
					<add name="ColoredConsole"/>
					<add name="FileTextWriter"/>
					<remove name="Default"/>
				</listeners>
			</source>
			<source name="Krista.FM.Client.ViewObjects.TemplatesUI" switchValue="Verbose">
				<listeners>
					<add name="ColoredConsole"/>
					<add name="FileTextWriter"/>
					<remove name="Default"/>
				</listeners>
			</source>
			<source name="Krista.FM.Common.TaskDocuments" switchValue="Verbose">
				<listeners>
					<add name="ColoredConsole"/>
					<add name="FileTextWriter"/>
					<remove name="Default"/>
				</listeners>
			</source>
		</sources>
		<sharedListeners>
			<add name="ColoredConsole" type="Krista.Diagnostics.ColoredConsoleTraceListener, Krista.Diagnostics"/>
			<add name="FileTextWriter" type="System.Diagnostics.TextWriterTraceListener, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" initializeData="Workplace.log"/>
			<!--
      <add name="ChatServer" type="Krista.Diagnostics.ChatServerTraceListener, Krista.Diagnostics" initializeData="tcp://fmserv:889/Krista.ChatServer/Server.rem"/>
      -->
		</sharedListeners>
	</system.diagnostics>
</configuration>

